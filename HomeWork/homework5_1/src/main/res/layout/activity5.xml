<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LayoutStyle2">

    <androidx.cardview.widget.CardView
        style="@style/CardViewStyle1"
        android:id="@+id/card_view1"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/LayoutStyle1">

        <TextView
            style="@style/TextViewStyle12"
            android:text="@string/photo"/>

        <TextView
            style="@style/TextViewStyle13"
            android:text="@string/certificated"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/LayoutStyle3">

                <ImageView
                    style="@style/ImageViewStyle6"
                    android:src="@drawable/heart"
                    android:layout_marginStart="180dp"/>

                <ImageView
                    style="@style/ImageViewStyle6"
                    android:src="@drawable/bookmark"/>

                <ImageView
                    style="@style/ImageViewStyle6"
                    android:src="@drawable/share"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/CardViewStyle"
        android:id="@+id/card_view2"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view1">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/LayoutStyle1">

            <TextView
                style="@style/TextViewStyle11"
                android:text="@string/layouts"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/LayoutStyle3">

                <ImageView
                    style="@style/ImageViewStyle6"
                    android:src="@drawable/heart"/>

                <ImageView
                    style="@style/ImageViewStyle6"
                    android:src="@drawable/bookmark"/>

                <ImageView
                    style="@style/ImageViewStyle6"
                    android:src="@drawable/share"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/CardViewStyle"
        android:id="@+id/card_view3"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view1">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/LayoutStyle1">

            <TextView
                style="@style/TextViewStyle11"
                android:text="@string/views"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/LayoutStyle3">

                <ImageView
                    style="@style/ImageViewStyle6"
                    android:src="@drawable/heart"/>

                <ImageView
                    style="@style/ImageViewStyle6"
                    android:src="@drawable/bookmark"/>

                <ImageView
                    style="@style/ImageViewStyle6"
                    android:src="@drawable/share"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>